.slides {
	height:380rpx;
}

.slides image {
	width:100%;
	height:100%;
}

.grids {
	display: flex;
	flex-wrap: wrap;
	background-color: #fff;
	font-size: 28rpx;
}

.grids .item {
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	width:250rpx;
	height: 250rpx;
	border-right:1rpx solid #eee;
	border-top:1rpx solid #eee;
	box-sizing: border-box;
}

.grids .item image {
	width: 70rpx;
	height: 70rpx;
}

.grids .item text {
	display: block;
}

.links {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 0;
  padding: 30rpx;
  background-color: #fff;
}

.links image {
  width: 330rpx;
  height: 185rpx;
}